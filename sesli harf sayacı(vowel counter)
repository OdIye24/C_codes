#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
int vowelCounter(char FullName[],int *counterA,int *counterE,int *counterI,int *counterO,int *counterU);
int main()
{
    char fullName[100];
    printf("enter your full name(with English letters only)\n");
    fgets(fullName,100,stdin);
    int counterA=0;
    int counterE=0;
    int counterI=0;
    int counterO=0;
    int counterU=0;

    vowelCounter(fullName,&counterA,&counterE,&counterI,&counterO,&counterU);
    printf("number of a=%d\nnumber of e=%d\nnumber of i=%d\nnumber of o=%d\nnumber of u=%d\n",counterA,counterE,counterI,counterO,counterU);
    return 0;
}
int vowelCounter(char FullName[],int *counterA,int *counterE,int *counterI,int *counterO,int *counterU){
bool hasvowel=false;
int i=0;
while(FullName[i]!='\0'){

      if(FullName[i]=='a'|| FullName[i]=='A'){
        hasvowel=true;
         (*counterA)++;
    } if(FullName[i]=='e'|| FullName[i]=='E'){
        hasvowel=true;
        (*counterE)++;
    } if(FullName[i]=='i'|| FullName[i]=='I'){
        hasvowel=true;
        (*counterI)++;
    } if(FullName[i]=='o'|| FullName[i]=='O'){
        hasvowel=true;
        (*counterO)++;
    } if(FullName[i]=='u'|| FullName[i]== 'U'){
        hasvowel=true;
        (*counterU)++;
    }
    i++;
}
return hasvowel;
}
