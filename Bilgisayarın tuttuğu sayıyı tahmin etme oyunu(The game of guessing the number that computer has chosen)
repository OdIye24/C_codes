#include <stdio.h>
#include <stdlib.h>
#include <time.h>
int main()
{
    srand(time(NULL));
    int i=1+rand()%100;
    int x;
    printf("guess the number that I have chosen from 1 to 100\n");
    scanf("%d",&x);
    while(x<1||x>100){
    printf("the number that you have entered is invalid\nenter a new number from 1 to 100\n");
    scanf("%d",&x);
    }
    int attempt=1;
    while(x>=1&&x<=100){

        if(x==i){
            printf("congratulations,you could guess the number at %d. attempt!",attempt);
            break;
        }
        else if(x<i){
            printf("your guess is wrong,please enter a greater number\n");
            scanf("%d",&x);
            attempt++;
        }
        else if(x>i){
            printf("your guess is wrong,please enter a smaller number\n");
            scanf("%d",&x);
            attempt++;
        }
    }

    return 0;
}